<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_ai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginEnd="15dp">
        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="Ai"
            android:background="@drawable/shape_ai_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="top"/>
        <TextView
            android:id="@+id/ai_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="400dp"
            android:text="Ai"
            android:background="@drawable/shape_ai_dialog_bg"
            android:gravity="start|center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        android:gravity="end">
        <TextView
            android:id="@+id/me_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me"
            android:maxWidth="300dp"
            android:background="@drawable/shape_me_dialog_bg"
            android:gravity="end|center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="me"
            android:background="@drawable/shape_me_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="top"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>